<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="210dp"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="10dp">
        android:layout_centerInParent="true"

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"

            android:gravity="start"
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BBQ at Egg Fountain"

            android:textSize="30dp" />
        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"

            android:gravity="start"
            android:id="@+id/info_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="We're holding a BBQ at the Egg Fountain this Wednesday! Come out and grab some food and chat with our responders c:
Cotton candy and freezies will also be available if you'd like a little treat!"

            android:textSize="15dp" />
        />

    </androidx.cardview.widget.CardView>

